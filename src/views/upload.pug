extends base

block content
  if errorMessage
    span(style="color:red")=errorMessage
  h3 Upload Video
  form(method="POST" action="/videos/upload")
    input(name="title" placeholder="Your Video Title" required, maxlength=50)
    input(name="description" placeholder="Description" required, maxlength=100)
    input(name="hashtags" placeholder="Hashtags, separated by comma " required)
    input(type="submit" value="Upload Video")