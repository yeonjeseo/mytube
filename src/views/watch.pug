extends base

block content
    div#videoContainer
        video(src="/" + video.fileUrl, width="980")#video
        div 
            button#play Play 
            button#mute Mute 
            input(type="range", min="0", max="1", step="0.1", value=0.5)#volume
            div 
                span#currentTime 00:00:00
                span  / 
                span#duration 00:00
            div 
                input(type="range", min="0", step="1", value=0.5)#timeline
            div
                button#fullscreen Enter Full Screen
    //-
        div
            p=video.description
            small=video.createdAt
        div
            small Uploaded by 
                a(href=`/users/${video.owner._id}`)=video.owner.name
        if String(video.owner._id) === String(loggedInUser._id)
            a(href=`${video.id}/edit`) Edit Video &rarr;
            br
            a(href=`${video.id}/delete`) Delete Video &rarr;
block script
    script(src="/static/js/videoPlayer.js") 
